@{
    ViewData["Title"] = "MACD震盪指標";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--自製麵包屑書籤-->
<div class="breadcrumbBox">
    <div class="breadcrumbText"><a href="/Home/Index">首頁</a>&nbsp&nbsp>&nbsp&nbsp<a href="">財務指標工具</a>&nbsp&nbsp>&nbsp&nbsp<span>MACD震盪指標</span></div>
</div>
<!--自製麵包屑書籤 結束-->

<div class="container">
    <div class="MACDContainerBox containerBox shadow">
        <div class="MACDTitle">MACD震盪指標</div>

        <!-- 指標介紹 -->
        <div class="IndicatorIntroBox">
            <div class="IndicatorIntroTitle">指標介紹</div>
            <div class="IndicatorIntroContent">
                <strong>MACD震盪指標</strong> 是一種簡單且廣受非專業人士喜愛的動量交易策略，通過比較股票的短期和長期移動平均線來產生買賣信號。
            </div>
        </div>

        <!-- 參數設定 -->
        <div class="ParameterSettingBox">
            <div class="ParameterSettingTitle">參數設定</div>
            <div class="ParameterSettingContent">
                <form asp-action="ProcessMACDInputs" method="post">

                    <label>短期移動平均線 (MA1)｜</label>
                    <input type="number" required name="ma1" placeholder="Enter short moving average period (e.g., 12)">
                    <br>

                    <label>長期移動平均線 (MA2)｜</label>
                    <input type="number" required name="ma2" placeholder="Enter long moving average period (e.g., 26)">
                    <br>

                    <label>起始日期｜</label>
                    <input type="date" required name="stdate" placeholder="Enter start date (e.g., 2022-01-01)">
                    <br>

                    <label>終止日期｜</label>
                    <input type="date" required name="eddate" placeholder="Enter end date (e.g., 2022-12-31)">
                    <br>

                    <label>股票代號｜</label>
                    <input type="text" required name="ticker" placeholder="Enter stock ticker (e.g., AAPL)">
                    <br>

                    <label>時間切割｜</label>
                    <input type="number" required name="slicer" placeholder="Enter data slicer (e.g., 30)">
                    <br>

                    <div class="SubmitParameterSettingFormBox">
                        <button type="submit" class="SubmitParameterSettingForm">產出分析圖</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>