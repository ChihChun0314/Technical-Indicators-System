@using System.Data
@{
    ViewData["Title"] = "動能交易策略";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--自製麵包屑書籤-->
<div class="breadcrumbBox">
    <div class="breadcrumbText"><a href="/Home/Index">首頁</a>&nbsp&nbsp>&nbsp&nbsp<span>動能交易策略</span></div>
</div>
<!--自製麵包屑書籤 結束-->

<div class="container">
    <div class="QuantitativeMomentumContainerBox containerBox shadow">
        <div class="QuantitativeMomentumTitle">動能交易策略</div>

        <!-- 交易策略 -->
        <div class="TradingStrategyBox">
            <div class="TradingStrategyTitle">交易策略</div>
            <div class="TradingStrategyContent">
                <form>

                    <label for="identity">刪除低動量股票數量｜</label>
                    <input type="text" required value="@ViewData["Arg0"]" readonly class="Non-input">
                    <br>

                    <label for="password">投資組合數量｜</label>
                    <input type="text" required value="@ViewData["Arg1"]" readonly class="Non-input">
                    <br>

                </form>
            </div>
        </div>

        <!-- 推薦購買的股票數量 -->
        <div class="RecommendedBuyStockBox">
            <div class="RecommendedBuyStockTitle">推薦購買的股票數量</div>
            <div class="scrollable-table">
                @if (ViewBag.TableData1 != null)
                {
                    <table border="1">
                        <thead>
                            <tr>
                                <th>股票代號</th>
                                <th>股票當前價格</th>
                                <th>一年期可回報價格</th>
                                <th>買進股票數量</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (DataRow row in ViewBag.TableData1.Rows)
                            {
                                <tr>
                                    @foreach (var item in row.ItemArray)
                                    {
                                        <td>@item</td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No data available for Final DataFrame after Calculating Number of Shares to Buy.</p>
                }
            </div>
        </div>

        <button id="create_HQMBuyStockBox" class="k-button k-primary btn-add-book">推薦購買的HQM股票數量</button>

        <!-- 推薦購買的HQM股票數量 -->
        <div id="window" class="HQMBuyStockBox" style="visibility:hidden">
            <div class="HQMBuyStockTitle">推薦購買的HQM股票數量</div>
            <div class="scrollable-table">
                @if (ViewBag.TableData2 != null)
                {
                    <table border="1">
                        <thead>
                            <tr>
                                <th>股票代號</th>
                                <th>股票當前價格</th>
                                <th>買進股票數量</th>
                                <th>一年期可回報價格</th>
                                <th>一年期可回報百分比</th>
                                <th>六個月可回報價格</th>
                                <th>六個月可回報百分比</th>
                                <th>三個月可回報價格</th>
                                <th>三個月可回報百分比</th>
                                <th>一個月可回報價格</th>
                                <th>一個月可回報百分比</th>
                                <th>HQM品質分數</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (DataRow row in ViewBag.TableData2.Rows)
                            {
                                <tr>
                                    @foreach (var item in row.ItemArray)
                                    {
                                        <td>@item</td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No data available for HQM DataFrame after Calculating Number of Shares to Buy.</p>
                }
            </div>
        </div>
    </div>
</div>

<script src="~/js/QuantitativeMomentumResult.js"></script>